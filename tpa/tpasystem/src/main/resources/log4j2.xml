<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
	<Properties>
     <Property name="baseDir">c:/logs</Property>
  	</Properties>
  <Appenders>
 	<RollingFile name="file" fileName="${baseDir}/tpa.log"
                 filePattern="${baseDir}/tpa-$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="200">
         <Delete basePath="${baseDir}" maxDepth="2">
          <IfFileName glob="*/app-*.log.gz" />
          <IfLastModified age="10d" />
        </Delete>
      </DefaultRolloverStrategy>
    </RollingFile>    
    
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%m%n"/>
    </Console>
  </Appenders>
  <Loggers>
  	<Logger name="com.atos.mapper.NotificationMapper.getNotifications" level="ERROR">
  		<AppenderRef ref="file" level="ERROR"/>
    	<AppenderRef ref="STDOUT" level="ERROR"/>
  	</Logger>
  	<Logger name="com.atos.mapper.scadaAlarms.ScadaAlarmMapper.selectScadaAlarmsPanel" level="ALL">
  		<AppenderRef ref="file" level="ALL"/>
    	<AppenderRef ref="STDOUT" level="ALL"/>
  	</Logger>
  	<Logger name="org.apache.shiro.realm.AuthorizingRealm" level="ALL">
